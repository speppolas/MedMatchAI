# Configurazione del Database PostgreSQL
DATABASE_URL=postgresql://username:password@localhost/medmatchint

# Chiave segreta per Flask (genera una chiave sicura e casuale)
FLASK_SECRET_KEY=genera_una_chiave_segreta_sicura_e_casuale

# Ambiente Flask (development, production, testing)
FLASK_ENV=production

# Impostazioni opzionali
# Timeout per l'eliminazione automatica dei PDF (in minuti, default: 30)
PDF_AUTO_DELETE_TIMEOUT=30

# Directory per i file caricati (default: uploads)
UPLOAD_FOLDER=uploads