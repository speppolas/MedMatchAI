modules = ["python-3.11", "cpp-clang14", "c-clang14", "nodejs-20"]

[nix]
channel = "stable-24_05"
packages = ["jq", "openssl", "postgresql"]

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "FLASK_APP=main.py FLASK_ENV=development flask run --host=0.0.0.0 --port=5000"]

[workflows]
runButton = "Flask Simple"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

