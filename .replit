modules = ["python-3.11", "cpp-clang14", "c-clang14"]

[nix]
channel = "stable-24_05"
packages = ["jq", "openssl", "postgresql"]

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "main:app"]

[workflows]
runButton = "Preview"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port --reload main:app"
waitForPort = 5000

[[workflows.workflow]]
name = "Preview"
author = 42578415
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "FLASK_APP=main.py FLASK_ENV=development flask run --host=0.0.0.0 --port=5000"

[[workflows.workflow]]
name = "Run App"
author = 42578415
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "FLASK_APP=main.py FLASK_ENV=development flask run --host=0.0.0.0 --port=5000"

[[workflows.workflow]]
name = "Preview App"
author = 42578415
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "PYTHONPATH=/home/runner/workspace FLASK_APP=main.py FLASK_ENV=development FLASK_DEBUG=1 python -m flask run --host=0.0.0.0 --port=5000"

[[ports]]
localPort = 5000
externalPort = 80
